{
  "manifest_version": 3,
  "name": "Can I Apply?",
  "version": "2.0",
  "description": "Job match analyzer in sidebar",
  "permissions": ["storage", "tabs", "activeTab", "sidePanel"],
  "host_permissions": ["https://api.mistral.ai/*", "https://api.openai.com/*", "https://api.groq.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.min.js", "pdf.worker.min.js"],
      "matches": ["*://*/*"]
    }
  ]
}
